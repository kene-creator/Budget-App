<div class="flex flex-col justify-center items-center w-full bg-[#3678C2] h-full">
  <h1 class="font-bold text-4xl text-white mt-4">Categories</h1>
  <p class="p-3"><%= button_to "Log Out", destroy_user_session_path, method: :delete %></p>
  <ul class="w-full bg-slate-300 p-2 mt-6">
  <% @groups.each do |group| %>
  <li class="bg-white mb-4 shadow-sm 
  rounded shadow-black p-2">
 <%= link_to group_entities_path(group) do %>
  <div class="flex items-center justify-between">
    <div class="w-10 h-10"><%= image_tag url_for(group.icon) %></div>
    <div>
      <p>Category: <%= group.name %></p>
      <p>Name: <%= group.user.name %></p>
      <p>Amount: $<%= group.total_price %></p>
    </div>
  </div>
<% end %>

  </li>
  <%end%>
  </ul>
</div>
